---
import OrderSummary from "../../components/OrderSummary.svelte";
import Form from "../components/Form.svelte";
import Jumbotron from "../../components/Jumbotron.astro";
import FormLayout from "../../layouts/FormLayout.astro";
import Layout from "../../layouts/Layout.astro";
import SecondaryNav from "../../components/SecondaryNav.astro";

console.log(Astro.cookies.get("Hola"));
---

<Layout title="Finalizar compra">
  <main>
    <Jumbotron
      class="jumbotron--small bg-position-center"
      title="Direcciones"
      color="color-dark"
      desc="Accede para ver y guardar todos tus pedidos en un solo lugar, disfrutando de una experiencia de compra personalizada. ¡Tu conveniencia y seguridad son nuestra prioridad!"
    />

    <div class="container">
      <SecondaryNav></SecondaryNav>

      <div class="my-account-content padding-0">
        <div class="u-columns woocommerce-Addresses col2-set addresses">

	
          <div class="shadow u-column1 col-1 address-element">
            <header class="address-element-title title">
              <h3>Dirección de facturación</h3>
              <a href="https://elmundodelsaquito.es/mi-cuenta/edit-address/facturacion/" class="edit">
                Editar
              </a>
            </header>
            <address>
              alex gimenez<br>c/ divina pastora 41<br>17820 Banyoles<br>Gerona		</address>
          </div>
        
          
          <div class="shadow u-column2 col-2 address-element">
            <header class="address-element-title title">
              <h3>Dirección de envío</h3>
              <a href="https://elmundodelsaquito.es/mi-cuenta/edit-address/envio/" class="edit">Editar</a>
            </header>
            <address>
              alex gimenez<br>c/ divina pastora 41<br>17820 Banyoles<br>Gerona		</address>
          </div>
        
        
          </div>
      </div>
    </div>
  </main>
</Layout>

<style>
    .container {
      gap: 30px;
      flex-direction: column;
    }
  
    .my-account-content {
      padding: 20px;
      border-radius: 4px;
      color: #6e6e6e;
      font-size: 0.9em;
      width: 100%;
    }

    .addresses {
      display: flex;
      gap: 18px;
    }

    .address-element {
      padding: 2rem;
      background-color: #fff;
      min-width: 50%;
      border-radius: 8px;      
    }

    .address-element header {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    address {
      font-style: normal;
    }

    h3 {
        font-size: 1.5em;
        margin: 0 0 10px;
        color: #2a1448;
        font-weight: 500;
    }

    a.edit {
      padding: 6px 14px;
      border-radius: 5px;
      color: #2a1448;
      font-weight: 600;
    }
</style>
  